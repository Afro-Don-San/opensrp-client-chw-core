<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutPncChildVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/customFontTextViewPncChildVisitTitle"
                style="@style/CustomFontTextViewStyle.ClientList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medical_history"
                android:background="@color/medical_bar"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/pnc_medical_history_child_title"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutPncChildVisitVaccineCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/customFontTextViewPncChildVisitVaccineCardTitle"
                style="@style/CustomFontTextViewStyle.ClientList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutPncChildVisit"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/pnc_medical_history_child_vaccine_title"
                android:textColor="@color/medical_text_inner"
                android:textSize="14sp" />


            <LinearLayout
                android:id="@+id/linearLayoutPncChildVisitVaccineCardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/viewChildVaccineCardRow"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/linearLayoutPncChildVisitVaccineCard"
            android:background="@color/light_grey"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayoutPncChildVisitImmunizations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/customFontTextViewPncChildVisitImmunizationsTitle"
                style="@style/CustomFontTextViewStyle.ClientList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutPncChildVisitVaccineCard"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/pnc_medical_history_child_immunizations_title"
                android:textColor="@color/medical_text_inner"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linearLayoutPncChildVisitImmunizationsDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/viewChildImmunizationsRow"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/linearLayoutPncChildVisitImmunizations"
            android:background="@color/light_grey"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayoutPncChildVisitExclusiveBreastfeeding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/customFontTextViewPncChildVisitExclusiveBreastfeedingTitle"
                style="@style/CustomFontTextViewStyle.ClientList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutPncChildVisitImmunizations"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/pnc_medical_history_child_exclusive_breastfeeding_title"
                android:textColor="@color/medical_text_inner"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linearLayoutPncChildVisitExclusiveBreastfeedingDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>