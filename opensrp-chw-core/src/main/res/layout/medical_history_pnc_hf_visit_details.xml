<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/pncHealthFacilityVisit"
        style="@style/CustomFontTextViewStyle.ClientList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="@string/pnc_medical_history_hf_visit"
        android:textColor="@color/medical_text_inner"
        android:textSize="16sp"
        />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/babyWeight"
        style="@style/CustomFontTextViewStyle.ClientList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="@string/pnc_baby_weight"
        android:textColor="@color/medical_text_inner"
        android:textSize="16sp"
        android:visibility="gone"
        />


    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/babyTemp"
        style="@style/CustomFontTextViewStyle.ClientList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="@string/pnc_baby_temp"
        android:textColor="@color/medical_text_inner"
        android:textSize="16sp"
        android:visibility="gone"
        />

</LinearLayout>
